  "type": "module",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev": "vite --config vite.config.showcase.ts",
    "build": "tsc -b && vite build",
    "build:lib": "tsc -b && vite build --config vite.config.ts",
    "build:showcase": "vite build --config vite.config.showcase.ts",
    "deploy": "bun run build:showcase && gh-pages -d dist",
    "preview": "vite preview --config vite.config.showcase.ts",
    "prepublishOnly": "bun run build:lib",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type:check": "tsc --noEmit",
    "tsc": "tsc --noEmit --watch",
    "check": "bun run type:check && bun run lint && bun run format:check",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./style.css": "./dist/style.css"
  },
